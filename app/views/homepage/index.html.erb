<% content_for :title, "Ludo Tracker" %>
<div class="max-w-4xl mx-auto mt-8 p-6 px-0 text-center">
  

<h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white"> There are  <span class="text-blue-600 dark:text-blue-500"># <%= Player.all.sum("total_win")%></span> Fights.</h1>
<p class="text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400">Here are the winner of them. </p>

  <div class="flex justify-center space-x-4">
  <ul class="w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
      <% Player.by_rank.each_with_index do |player,index| %>
      <li class="w-full px-4 py-2 border-b border-gray-200 rounded-t-lg dark:border-gray-600 flex justify-center items-center">
        <% if index == 0%>
        <%= render "card_gold", player: player,index: index %>
        <% elsif index == 1 %>
         <%= render "card_silver", player: player,index: index %>
         <% elsif index == 2 %>
         <%= render "card_bronze", player: player,index: index %>
        <% else %>
          <%= render "card_v1", player: player,index: index %>
        <% end %>
      </li>
      <% end %>
  </ul>
  </div>
</div>

<div class="card-container">
  <% Match.by_recent.each_with_index do |match,index|%>
    <%= render "match_card", match: match, index: match.id %>
  <% end %>
</div>