<div class="w-full bg-gradient-to-b from-yellow-100 via-yellow-50 to-white border border-yellow-300 rounded-2xl shadow-md hover:shadow-lg transition-all duration-300 dark:from-yellow-800 dark:via-yellow-900 dark:to-yellow-950 dark:border-yellow-700">
  <div class="px-6 pb-6">
    <!-- Player Title -->

<span class="bg-blue-100 text-blue-800 text-2xl font-semibold me-2 px-2.5 py-0.5 rounded-sm dark:bg-blue-200 dark:text-blue-800 ms-2"> <%= player_title(index) %> </span>
    <!-- Player Name -->
    <h1 class="flex items-center justify-center text-3xl font-extrabold text-yellow-700 dark:text-yellow-300 mt-4 tracking-wide">
      <%= player.name %>
    </h1>

    <!-- Win Section -->
    <div class="flex flex-col items-center justify-between my-6 bg-yellow-50 dark:bg-yellow-900/40 rounded-xl p-3">
      <p class="text-2xl font-bold text-yellow-800 dark:text-yellow-200">
        <%= player.total_win %> Times Winner
      </p>
      <p class="text-lg text-yellow-600 font-medium">
        🏆 World Cup Winner
      </p>
    </div>

    <!-- Points Section -->
    <div class="flex flex-col items-center gap-2">
      <%# <img class="w-12 h-12 rounded-full ring-2 ring-yellow-400 shadow-md" src="/docs/images/people/profile-picture-5.jpg" alt=""> %>
      <div class="font-medium text-yellow-800  text-center">
        <div class="text-sm text-yellow-600 ">
          <%= player.points %> Total Points
        </div>
      </div>
    </div>
  </div>
</div>
